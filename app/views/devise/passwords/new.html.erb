<div class="col-12 d-flex align-items-center justify-content-center">
  <div class="signin-inner my-3 my-lg-0 bg-white shadow border-0 rounded p-4 p-lg-5 w-100 fmxw-500">
    <h1 class="h3">Esqueceu sua senha?</h1>
    <p class="md-4">Não se preocupe! Basta digitar seu e-mail e enviaremos um código para redefinir sua senha!</p>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>    
      <%#= f.error_notification %>
      <div class="col-md-12 mb-4">
        <%= f.label :email %>
        <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "exemplo@exemplo.com.br", input_html: {class: "form-control"} %>  
      </div>

      <div class="d-grid">
        <%= f.button :submit, "Recuperar senha", class: "btn btn-gray-800" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
