<div class="bg-white shadow border-0 rounded border-light p-4 p-lg-5 w-100 fmxw-500">
    <div class="text-center text-md-center mb-4 mt-md-0">
      <h1 class="mb-0 h3">Sign in <%= current_page?(new_admin_session_path) ? "SAS Animes".html_safe : "PrimeAnimes".html_safe %></h1>
    </div>
    
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mb-4">
        <%= f.label :email %>
        <%= f.input :email, label: false, required: true, autofocus: false, input_html: { class: "form-control", autocomplete: "email", placeholder: "admin@admin.com.br" } %>
      </div>

      <div class="form-group">
        <div class="form-group mb-4">
          <%= f.label :password %>
          <%= f.input :password, label: false, required: true, autofocus: false, input_html: { class: "form-control", autocomplete: "current-password", placeholder: :password } %>
        </div>
        
        <div class="d-flex justify-content-between align-items-top mb-4">
          <%= f.input :remember_me, as: :boolean, input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>

          <div>
            <%= link_to "Esqueceu a senha?", new_user_password_path(resource_name) if (devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations') %>
          </div>
        </div>
      </div>

      <div class="d-grid">
        <%= f.button :submit, "Login", class: "btn-gray-800" %>
      </div>
    <% end %>
</div>

<%= render "devise/shared/links" %>
