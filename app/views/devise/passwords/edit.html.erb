<div class="col-12 d-flex align-items-center justify-content-center">
  <div class="bg-white shadow border-0 rounded p-4 p-lg-5 w-100 fmxw-500">
    <h1 class="h3 mb-4">Alterar Senha</h1>

    <%= simple_form_for(resource, as: resource_name, url: user_password_path, html: { method: :put }) do |f| %>
      <%#= f.error_notification %>
      <%#= f.full_error :reset_password_token %>
      <%= f.input :reset_password_token, as: :hidden %>

      <div class="form-group mb-4">
        <%= f.label :password %>
        <%= f.input :password, label: false, required: true, autofocus: true, hint: ("Minimo de #{@minimum_password_length} caracteres" if @minimum_password_length), input_html: { class: "form-control" } %>
      </div>

      <div class="form-group mb-4">
        <%= f.label :password_confirmation %>
        <%= f.input :password_confirmation, label: false, required: true, input_html: { class: "form-control" } %>
      </div>

      <div class="d-grid">
        <%= f.button :submit, "Alterar Senha", class: "btn btn-gray-800" %>
      </div>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
