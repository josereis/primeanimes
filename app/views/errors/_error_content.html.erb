<div class="row">
    <div class="col-12 text-center d-flex align-items-center justify-content-center">
        <div>
            <%= image_pack_tag(image_path, class: "img-fluid w-75", alt: "401 - Unauthorized") %>
            <h1 class="mt-3"><span class="fw-bolder text-primary"><%= title %></span></h1>
            <p class="lead my-4"><%= message %></p>
            <%= link_to (:back || root_path), class: "btn btn-gray-800 d-inline-flex align-items-center justify-content-center mb-4" do %>
                <i class="fa-solid fa-arrow-left icon icon-xs me-2"></i>
                Voltar
            <% end %>
        </div>
    </div>
</div>