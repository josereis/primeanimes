<%= render "layouts/shared/users/page_title", url_path: prime_animes_users_path %>

<% if @users.any? %>
    <div class="card card-body border-0 shadow table-wrapper table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="border-gray-200">Nome</th>						
                    <th class="border-gray-200">E-mail</th>
                    <th class="border-gray-200">Perfil</th>
                    <th class="border-gray-200">Status</th>
                    <th class="border-gray-200">Cadastrado em</th>
                    <th class="border-gray-200"></th>
                </tr>
            </thead>
            <tbody>
                <%= render "layouts/shared/users/user", users: @users %>
            </tbody>
        </table>

        <%= render 'layouts/shared/kaminari_infos', list: @users, remote: false %>
    </div>
<% else %>
    <div class="alert alert-warning" role="alert">
